DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Database (optional - for production)
DATABASE_URL=sqlite:///db.sqlite3

# Email settings (for production)
